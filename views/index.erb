		<form method='POST' action='/search' class="form-wrapper cf">
			<p id="instructions">Choose your level of hipster:</p>
			<div class="styled-select">
				<select name='filter'>
					<option id='filters' value='clean'>Clean</option>
					<option id='filters' value='scruffy'>Scruffy</option>
					<option id='filters' value='dirty'>Dirty</option>
				</select>
			</div>
			<input name="query" type="text" placeholder="Search username of artist..." required>
			<button type="submit">Search</button>
		</form>

		<div id='player'>
			<iframe class='iframe' width='100%' height='465' scrolling='no' frameborder='no' src='http://w.soundcloud.com/player/?url=<%= @last_playlist_uri %>'></iframe>
		</div>

	</div>
